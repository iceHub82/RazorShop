@inherits RazorSliceHttpResult<FooterVm>
<div class="container px-4 px-lg-5">
    <footer class="py-5">
        <div class="row">
            <div class="col-6 col-md-4 col-lg-2 mb-3">
                <h5>Kontakt</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><span class="nav-link p-0 text-body-secondary">@Model.ShopName</span></li>
                    <li class="nav-item"><span class="nav-link p-0 text-body-secondary">@Model.Address</span></li>
                    <li class="nav-item"><span class="nav-link p-0 text-body-secondary">@Model.ZipCode @Model.City</span></li>
                    <li class="nav-item"><span class="nav-link p-0 text-body-secondary">@Model.Email</span></li>
                </ul>
            </div>

            <div class="col-6 col-md-4 col-lg-2 mb-3">
                <h5>Info</h5>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2"><a href="/About" class="nav-link p-0 text-body-secondary">Om os</a></li>
                    <li class="nav-item mb-2"><a href="/CustomerService" class="nav-link p-0 text-body-secondary">Kundeservice</a></li>
                    <li class="nav-item mb-2"><a href="/Terms" class="nav-link p-0 text-body-secondary">Betingelser og vilkår</a></li>
                    <li class="nav-item mb-2"><a href="/PayAndDelivery" class="nav-link p-0 text-body-secondary">Betaling og levering</a></li>
                    <li class="nav-item mb-2"><a href="/DataPolicy" class="nav-link p-0 text-body-secondary">Data Politik </a></li>
                </ul>
            </div>

            <div class="col-6 col-md-4 col-lg-2 mb-3">
                <h5>Betalingsmuligheder</h5>
                <div class="row">
                    <div class="col-4">
                        <img src="/img/googlepay.webp" class="credit-card-img">
                    </div>
                    <div class="col-4">
                        <img src="/img/applepay.webp" class="credit-card-img">
                    </div>
                    <div class="col-4">
                        <img src="/img/mastercard.webp" class="credit-card-img">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <img src="/img/maestro.webp" class="credit-card-img">
                    </div>
                    <div class="col-4">
                        <img src="/img/visa.webp" class="credit-card-img">
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-12 col-lg-5 offset-lg-1 mb-3">
                <form id="newsletter-form" hx-post="/newsletter" novalidate>
                    <h5>Tilmeld dig vores nyhedsbrev</h5>
                    <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                        <input id="newsletter" type="email" class="form-control" placeholder="Email" maxlength="100" pattern="^[a-zA-Z0-9.!#$%&’*+\/=?^_`\{\|\}~\-]+@@[a-zA-Z0-9\-]+(?:\.[a-zA-Z0-9\-]+)+$" required>
                        <button type="submit" class="btn btn-primary">Tilmeld</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top">
            <p>@Model.Year @Model.ShopName</p>
            <ul class="list-unstyled d-flex">
                <li class="ms-3"><a class="link-body-emphasis" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
                <li class="ms-3"><a class="link-body-emphasis" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
                <li class="ms-3"><a class="link-body-emphasis" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
            </ul>
        </div>
    </footer>
</div>