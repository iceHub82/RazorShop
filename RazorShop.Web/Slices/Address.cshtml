@inherits RazorSlice

<div class="row g-3">
    <div class="col-3">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="first-name" name="first-name" placeholder="" maxlength="30" pattern="^[\x20-\x7E\xA0-\xA3\xA5\xA7\xA9-\xB3\xB5-\xB7\xB9-\xBB\xBF-\xFF\u20AC\u0160\u0161\u017D\u017E\u0152\u0153\u0178]{1,70}$" required />
            <label for="first-name">First Name</label>
        </div>
    </div>
    <div class="col-3">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="last-name" name="last-name" placeholder="" maxlength="30" pattern="^[\x20-\x7E\xA0-\xA3\xA5\xA7\xA9-\xB3\xB5-\xB7\xB9-\xBB\xBF-\xFF\u20AC\u0160\u0161\u017D\u017E\u0152\u0153\u0178]{2,70}$" required>
            <label for="last-name">Last Name</label>
        </div>
    </div>
</div>
<div class="row g-3">
    <div class="col-3">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="address" name="address" placeholder="" maxlength="40" pattern="^.{3,64}$" required>
            <label for="address">Address</label>
        </div>
    </div>
    <div class="col-3">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="zip-code" name="zip-code" placeholder="" pattern="^[0-9]{2}[ ]?[0-9]{2}$" required>
            <label for="zip-code">Zip Code</label>
        </div>
    </div>
    <div class="col-3">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="city" name="city" placeholder="" maxlength="30" pattern="^[a-zA-ZåäöÅÄÖæøÆØ]{1}[a-zA-ZåäöÅÄÖæøÆØ.\-]*([ ]{1}[a-zA-ZåäöÅÄÖæøÆØ.\-]+)*$" required>
            <label for="city">City</label>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-3">
        <div class="form-floating mb-3">
            <select name="country-id" class="form-select">
                <option value="1">Danmark</option>
                <option value="2">Færøerne</option>
                <option value="3">Grønland</option>
                <option value="4">Island</option>
            </select>
            <label>Country</label>
        </div>
    </div>
</div>